[Unit]
Description=Ceph Monitor [{{ monitor_name }}][{{ cluster }}]
After=network-online.target local-fs.target time-sync.target
Wants=network-online.target local-fs.target time-sync.target

[Service]
Type=forking
ExecStart=/usr/bin/ceph-mon --cluster {{ cluster }} --id {{ monitor_name }}
User=ceph
Group=ceph

[Install]
WantedBy=multi-user.target
