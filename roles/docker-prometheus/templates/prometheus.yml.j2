global:
  scrape_interval:     15s
  evaluation_interval: 15s

rule_files:
  # - "first.rules"
  # - "second.rules"

scrape_configs:
  - job_name: prometheus
    static_configs:
      - targets: ['localhost:9090']

  - job_name: docker-swarm
    static_configs:
      - targets:
        - "x0.{{ domain_name }}:9323"
        - "x1.{{ domain_name }}:9323"
        - "x2.{{ domain_name }}:9323"
        - "ceph0.{{ domain_name }}:9323"
        - "ceph1.{{ domain_name }}:9323"
        - "ceph2.{{ domain_name }}:9323"

  - job_name: ceph
    static_configs:
      - targets:
        - "ceph0.{{ domain_name }}:9283"
        - "ceph2.{{ domain_name }}:9283"

  - job_name: node_exporters
    static_configs:
      - targets:
        - "x0.{{ domain_name }}:9100"
        - "x1.{{ domain_name }}:9100"
        - "x2.{{ domain_name }}:9100"
        - "ceph0.{{ domain_name }}:9100"
        - "ceph1.{{ domain_name }}:9100"
        - "ceph2.{{ domain_name }}:9100"
